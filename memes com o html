    <script>
    
      let button = document.getElementById('no'); // Seleciona o botão "Não" pelo ID
      let height = window.innerHeight - 50; // Calcula a altura disponível na janela menos um pouco
      let width = window.innerWidth - 50; // Calcula a largura disponível na janela menos um pouco
  
      // Adiciona um evento de mouseover ao botão "Não"
      button.addEventListener('mouseover', function (){
         button.style.position = "absolute"; // Muda a posição do botão para absoluta quando passa o mouse
         button.style.top = Math.random() * height + "px"; // Move verticalmente para uma posição aleatória dentro da altura disponível
         button.style.left = Math.random() * width + "px"; // Move horizontalmente para uma posição aleatória dentro da largura disponível
      })
  
  </script>
